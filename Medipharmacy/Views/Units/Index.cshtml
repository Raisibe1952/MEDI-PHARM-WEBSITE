@model IEnumerable<Medipharmacy.Models.Unit>

@{
    ViewData["Title"] = "Units";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Units</h3>
<hr />
<p>
    <a class="btn btn-info" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="GetModel('/unit/create')"><i class="far fa-plus"></i> New Unit</a>
</p>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!--Content Here-->
        </div>
    </div>
</div>

<table class="table table-striped table-responsive table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                Metric
            </th>
            <th style="text-align: right">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
         {
            var metrics = ViewBag.metrics as List<Metric>;
            @foreach (var item in Model)
             {
                 <tr>
                     <td>
                         @Html.DisplayFor(modelItem => item.Name)
                     </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.Code)
                     </td>
                     <td>
                         @metrics.Find(m => m.MetricId.Equals(item.MetricId)).Name
                     </td>
                     <td style="text-align: right">
                         <div class="btn-group">
                             <a class="mx-2" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="GetModel('/unit/view/@item.UnitId')"><i class="far fa-eye text-info" data-bs-toggle="tooltip" data-bs-placement="bottom" title="view"></i></a>
                             <a class="mx-2" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="GetModel('/unit/edit/@item.UnitId')"><i class="far fa-edit text-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" title="edit"></i></a>
                             <a class="mx-2" href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="GetModel('/unit/delete/@item.UnitId')"><i class="far fa-trash-alt text-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="delete"></i></a>
                         </div>
                     </td>
                 </tr>
             }
         }
    </tbody>
</table>
