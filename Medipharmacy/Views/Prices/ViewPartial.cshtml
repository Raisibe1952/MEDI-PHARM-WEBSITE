@model Medipharmacy.Models.Price

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Category Details Details</h5>
</div>
<div class="modal-body">
    <dl class="row">
        <dt class="col-sm-2 m-2">
            Product
        </dt>
        <dd class="col-sm-10 m-2">
            @ViewBag.productName
        </dd>
        <dt class="col-sm-2 m-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10 m-2">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2 m-2">
            @Html.DisplayNameFor(model => model.Promotion)
        </dt>
        <dd class="col-sm-10 m-2">
            @Html.DisplayFor(model => model.Promotion)
        </dd>
        <dt class="col-sm-2 m-2">
            Created On
        </dt>
        <dd class="col-sm-10 m-2">
            @Model.DateCreated.ToString("yyyy-MM-dd HH:mm")
        </dd>
    </dl>
</div>
<div class="modal-footer">
    <button data-bs-dismiss="modal" class="btn btn-secondary w-25">Close</button>
</div>