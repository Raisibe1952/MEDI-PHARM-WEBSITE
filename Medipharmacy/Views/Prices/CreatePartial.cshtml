@model Medipharmacy.Models.Price

<form asp-action="Add">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Price</h5>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="PriceId" hidden />
        <input asp-for="DateCreated" value="" hidden />
        <div class="form-group mb-2">
            <select asp-for="ProductId" class="form-select" asp-items="@(new SelectList(ViewBag.products, "ProductId", "Name"))"></select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <input asp-for="Amount" class="form-control" placeholder="Amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group form-check mb-2">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Promotion" /> @Html.DisplayNameFor(model => model.Promotion)
            </label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-bs-dismiss="modal" class="btn btn-warning w-25">Cancel</button>
        <button type="submit" class="btn btn-success w-25">Create</button>
    </div>
</form>

